@using WebVideoStore.Models.ViewModels
@model VideoTape

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete VideoTape
            </h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Year" class="p-0"></label>
            <input asp-for="Year" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Director" class="p-0"></label>
            <input asp-for="Director" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PriceBuy" class="p-0"></label>
            <input asp-for="PriceBuy" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class=" btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="VideoTape" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
    </form>