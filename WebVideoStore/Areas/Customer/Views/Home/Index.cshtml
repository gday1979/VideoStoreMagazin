@model IEnumerable<VideoTape> 

<div class="row pb-3">
    @foreach(var videotape in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card boder-0 p-3 shadow border-top border-5 rounded">
                        <img src="@videotape.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@videotape.Title</p>
                                <p class="card-title text-warning text-center">by <b>@videotape.Director</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75  text-center">Year of release:<b>@videotape.Year</b></p>
                                <p class="text-dark text-opacity-90 text-center">Buy for: <b>@videotape.PriceBuy.ToString("c")</b></p>
                                <p class="text-dark text-opacity-80 text-center">Rent for: <b>@videotape.PriceRent.ToString("c")</b></p>
                            </div>
                        </div>
                    <a href="#" class="btn btn-primary bg-gradient border-0 form-control" >Details</a>
                    </div>
                </div>
            </div>
        </div>

    }
</div>