@model VideoTape

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-secondary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by Director @Model.Director</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3"> 
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class=" btn btn-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                          <div class="col-12 col-md-6 pb-4">
                              <span class="badge">@Model.Category.Name</span>
                          </div>
                          <div class="row ps-2">
                              <h6 class="text-dark text-opacity-50">Year: @Model.Year</h6>
                          </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-75">PriceRent: @Model.PriceRent.ToString("c")</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-75">PriceBuy: @Model.PriceBuy.ToString("c")</h6>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</form>